<!-- Provider List-->
<section class="page-section" id="services">
    <div class="container px-4 px-lg-5">
        <h2 class="text-center mt-0">At Your Service</h2>
        <hr class="divider" />
        <div class="table-responsive">
            <table class="table table-hover tablebordered">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Poition</th>
                        <th scope="col">Company</th>
                        <th scope="col">Actions</th>
                    </tr>
                    <tbody>
                        {{#each Providers}}
                        <tr>
                            <td scope="row" >{{ id }}</td>
                            <td scope="row" >{{ firstname}}</td>
                            <td scope="row" >{{ lastname }}</td>
                            <td scope="row" >{{ position }}</td>
                            <td scope="row" >{{ company.comapny_name }}</td>
                            <td scope="row" >
                                <a href="/providers/details/{{ id }}" class="btn btn-info btn-sm">More Info...</a>
                                <a href="/providers/edit/{{ id }}" class="btn btn-secondary btn-sm">Edit</a>
                                <a href="/providers/delete/{{ id }}" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </thead>
            </table>
        </div>
    </div>
</section>